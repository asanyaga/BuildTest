<Application x:Class="SAPClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:IoC="clr-namespace:SAPUtilityLib.IoC;assembly=SAPUtilityLib" 
             StartupUri="Views/Login.xaml"
             mc:Ignorable="d">

    <Application.Resources>
        <ResourceDictionary>
            <IoC:VMLocator x:Key="Locator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Styles.xaml" />
                <ResourceDictionary Source="Assets/AdminMenuStyle.xaml" />
                <ResourceDictionary Source="Assets/TabStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
