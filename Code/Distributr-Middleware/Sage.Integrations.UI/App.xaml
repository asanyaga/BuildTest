<Application x:Class="Sage.Integrations.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:locator="clr-namespace:Distributr_Middleware.WPF.Lib.IOC;assembly=Distributr-Middleware.WPF.Lib"
             StartupUri="Views\Login.xaml"
             mc:Ignorable="d">

    <Application.Resources>
        <ResourceDictionary>
            <locator:MiddlewareViewModelLocator x:Key="Locator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Styles.xaml" />
                <ResourceDictionary Source="Assets/AdminMenuStyle.xaml" />
                <ResourceDictionary Source="Assets/TabStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
