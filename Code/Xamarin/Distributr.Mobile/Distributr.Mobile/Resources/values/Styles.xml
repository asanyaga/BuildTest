<?xml version="1.0" encoding="utf-8"?>

<resources>

  <!-- No ActionBar or StatusBar Theme used by Login/Login Settings screens-->
  <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="colorControlNormal">@color/listDivider</item>
    <item name="colorControlActivated">@color/colorAction</item>
    <item name="colorControlHighlight">@color/colorAction</item>
    <item name="android:buttonStyle">@style/AppTheme.ActionButton</item>
  </style>

  <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="theme">@style/ThemeOverlay.AppTheme.ActionBar</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@color/actionBarContent</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.OverlayToolbar" parent="AppTheme.Base">
    <item name="android:windowActionBarOverlay">true</item>
    <item name="windowActionBarOverlay">true</item>
  </style>

  <!-- Main Application theme-->
  <style name="AppTheme" parent="AppTheme.Base" />

  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">   
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    
    <item name="android:homeAsUpIndicator">@drawable/ic_action_hamburger</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorControlNormal">@color/listDivider</item>
    <item name="colorControlActivated">@color/colorAction</item>
    <item name="colorControlHighlight">@color/colorAction</item>
    
    <item name="android:buttonStyle">@style/AppTheme.ActionButton</item>    
    <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>

    <item name="android:spinnerDropDownItemStyle">@style/AppTheme.SpinnerText</item>
  </style>

  <style name="AppTheme.SpinnerText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:textAppearance">@style/AppTheme.SpinnerTextStyle</item>
  </style>

  <style name="AppTheme.SpinnerTextStyle" parent="@android:style/Widget">
    <item name="android:textColor">@color/actionBarContent</item>
  </style>
  
  <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
  </style>
  
  <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/actionBarContent</item>
    <item name="android:textStyle">italic</item>
  </style>

  <!-- Text Styles used across the App-->

  <style name="AppTheme.BaseTextStyle" parent="@android:style/TextAppearance.Small">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">@color/primaryText</item>
  </style>
  
  <style name="AppTheme.FormFieldHeadTextStyle" parent="AppTheme.BaseTextStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/secondaryText</item>
  </style>

  <style name="AppTheme.PrimaryTextNormal" parent="AppTheme.BaseTextStyle">
  </style>

  <style name="AppTheme.SecondaryTextNormal" parent="AppTheme.BaseTextStyle">
    <item name="android:textColor">@color/secondaryText</item>
  </style>

  <style name="AppTheme.PrimaryTextLarge" parent="AppTheme.PrimaryTextNormal">
    <item name="android:textSize">18sp</item>
  </style>  
  
  <style name="AppTheme.SecondaryTextLarge" parent="AppTheme.SecondaryTextNormal">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="AppTheme.SecondaryTextSmall" parent="AppTheme.BaseTextStyle">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/secondaryText</item>
  </style>

  <!-- Dialog Style-->
  <style name="AppTheme.AlertDialog" parent="@android:style/Theme.Dialog">    
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="android:textColorPrimary">@color/primaryText</item>
    <item name="android:textColorSecondary">@color/secondaryText</item>
  </style>

  <!-- Main Application Button Style-->
  <style name="AppTheme.ActionButton" parent="@android:style/Widget.Button">
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@color/actionBarContent</item>
    <item name="android:textSize">@dimen/standard_action_button_text_size</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:background">@drawable/action_button</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>
 
</resources>