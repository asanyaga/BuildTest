@using Distributr.CustomerSupport.Paging
@model Distributr.CustomerSupport.Code.CCAudit.CCCommandAuditViewModel
<div id="commandList">
    <table id="" class="table table-bordered table-condensed">
        <thead>
            <tr><th>Command-Id</th><th>Command-Type</th><th>Document-Id</th><th>Is-Delivered</th><th>Date Delivered</th><th>Date Processed</th></tr>
        </thead>
        <tbody>
            @if (Model.RoutingItems != null)
            {
                foreach (var item in Model.RoutingItems)
                {
                    <tr>
                        <td>@item.CommandId</td>
                        <td>@item.CommandType</td> 
                        <td>@item.DocumentId</td>
                        <td>@item.Delivered</td>
                        <td>@item.DateDelivered</td>
                        <td>@item.DateProcessed</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (Model.RoutingItems != null && Model.RoutingItems.Any())
    {
        <div class="pager" data-target="#commandList">
            @Html.Pager(
                Model.PageSize,
                Model.PageNumber,
                Model.TotalItemCount)
            Items per page:
            @Html.DropDownListFor(n => Model.PageSize, Paginator.ItemsPerPageList, new {@id = "ddlItemsPerPage", @class = "span1"})
        </div>
    }
</div>