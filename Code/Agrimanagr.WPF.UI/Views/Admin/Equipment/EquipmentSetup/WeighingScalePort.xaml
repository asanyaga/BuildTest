<Window x:Class="Agrimanagr.WPF.UI.Views.Admin.Equipment.EquipmentSetup.WeighingScalePort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen"
        Title="Weighing Scale Port" Height="148" Width="300">
    <Grid VerticalAlignment="Top">
        <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10, 20,0,0">
            <Label Content="Enter Port:" Height="28"/>
            <TextBox Text="" Width="167" x:Name="TxtWeighingScalePort" Height="28" Margin="30,0,0,0"/>
        </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10, 20,20,0" HorizontalAlignment="Right">
                <Button Content="OK" x:Name="btnOK" Click="OK_Click_1" Margin="10, 0,0,0" Height="28" Width="50"/>
                <Button Content="Cancel" x:Name="btnCancel" Click="Cancel_Click_1" Margin="10, 0,0,0" Height="28" Width="50"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
