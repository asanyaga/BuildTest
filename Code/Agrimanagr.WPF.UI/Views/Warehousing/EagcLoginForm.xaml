<Page x:Class="Agrimanagr.WPF.UI.Views.Warehousing.EagcLoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eagc Login Form" Height="270" Width="500" 
        
        DataContext="{Binding EagcLoginViewModel, Source={StaticResource Locator}}">
    <Grid>
        
        <Label Content="UserName" HorizontalAlignment="Left" Margin="52,58,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="137,62,0,0" TextWrapping="Wrap" Text="{Binding UserName}"  VerticalAlignment="Top" Width="239"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="52,103,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="137,107,0,0" TextWrapping="Wrap" Text="{Binding UserPassword}" VerticalAlignment="Top" Width="239"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="169,162,0,0" VerticalAlignment="Top" Width="75" Height="32"  Command="{Binding SaveCommand}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="269,162,0,0" VerticalAlignment="Top" Width="75" Height="32" RenderTransformOrigin="0.154,0.466" Click="Button_Click"/>
       
    </Grid>
</Page>
