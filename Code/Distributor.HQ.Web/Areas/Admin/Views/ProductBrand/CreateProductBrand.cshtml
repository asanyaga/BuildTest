@model Distributr.HQ.Lib.ViewModels.Admin.Product.ProductBrandViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = @Html.GetText("hq.brand.form.title.add");
}

	<h2 id="breadcrumb-holder">Products &amp; Pricing &gt; <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.brand.form.breadcrumb.view"), "/ListProductBrands")</span> &gt;
    @Html.GetText("hq.brand.form.breadcrumb.add")</h2>

<div id="main-content-housing">


@if (ViewBag.msg != null)
{ 
    <div class="notice-notification">
    @ViewBag.msg
</div>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{ 
    
    if (!Html.ViewData.ModelState.IsValid)
    {
            <div class="notice-notification">
                @Html.ValidationSummary()
            </div>
    }
   <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.brand.form.details.add")</legend>
                            
								
							
					
        <table class="detail-arrange">
          <tr>
                <td style="padding-top:12px;"><strong>@Html.GetText("hq.brand.form.supplier")</strong></td>
                <td><span class="text-box-cshtml">@Html.DropDownListFor(model => model.SupplierId, new SelectList(ViewBag.SupplierList, "Key", "Value"), "-----Select Supplier-----")</span>
             
            <span class="inline-error">@Html.ValidationMessageFor(model => model.SupplierId)</span></td>
            </tr>
            <tr>
                <td style="padding-top:12px;"><strong>@Html.GetText("hq.brand.form.code")</strong></td>
                <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Code)</span>
             
            <span class="inline-error">@Html.ValidationMessageFor(model => model.Code)</span></td>
            </tr>
                                    
            <tr>
                <td style="padding-top:12px;"><strong>@Html.GetText("hq.brand.form.name")</strong></td>
                <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span>
            <span class="inline-error">@Html.ValidationMessageFor(model => model.Name)</span></td>
            </tr>
                                    
                <tr>
                <td style="padding-top:12px;"><strong>@Html.GetText("hq.brand.form.description")</strong></td>
                <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Description)</span>
            <span class="inline-error">@Html.ValidationMessageFor(model => model.Description)</span></td>
            </tr>
        </table><!-- end of detail-arrange -->
        </fieldset>
        <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            <input name="Create" type="reset" value="Clear" class="button-style-one"/>
            

        </fieldset>
 </div><!-- end of div#primary-controls -->
     
}
</div>


