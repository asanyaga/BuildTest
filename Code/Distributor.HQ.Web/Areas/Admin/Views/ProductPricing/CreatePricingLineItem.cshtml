@model Distributr.HQ.Lib.ViewModels.Admin.Product.AddPricingLineItemsViewModel

@{
    ViewBag.Title = "CreatePricingLineItem";
}
<div>
    @Html.ActionLink("View Pricing Items", "Index")
</div>
<h2>CreatePricingLineItem</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


   
@using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>AddPricingLineItemsViewModel</legend>

            @Html.HiddenFor(model => model.Id)
            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentExFactory)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentExFactory)
                @Html.ValidationMessageFor(model => model.CurrentExFactory)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentSellingPrice)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentSellingPrice)
                @Html.ValidationMessageFor(model => model.CurrentSellingPrice)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentEffectiveDate)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentEffectiveDate)
                @Html.ValidationMessageFor(model => model.CurrentEffectiveDate)
            </div>

            <p>
                <input type="submit" value="Save" class="button-style-one" />
            </p>
        </fieldset>
    }





