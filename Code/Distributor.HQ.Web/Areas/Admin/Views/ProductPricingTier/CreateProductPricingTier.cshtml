@model Distributr.HQ.Lib.ViewModels.Admin.Product.ProductPricingTierViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.ptier.form.title.add");
}

	<h2 id="breadcrumb-holder">@Html.GetText("hq.ptier.breadcrumb") &gt; <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.ptier.form.breadcrumb.view"), "/ListProductPricingTiers")</span> &gt; 
   @Html.GetText("hq.ptier.form.breadcrumb.add")</h2>

<div id="main-content-housing">
@if (ViewBag.msg!=null)
{
<div class="notice-notification">
@Html.ValidationSummary(true)
@ViewBag.msg
</div>
}
@if (!Html.ViewData.ModelState.IsValid)
{ 
    <div class="notice-notification">
    @Html.ValidationSummary()
    </div>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
   <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.ptier.form.details.add")</legend>
                            
								
							
					
        <table class="detail-arrange">
         <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.ptier.code")
        </strong></td>  <td><span class="text-box-cshtml"> @Html.EditorFor(model => model.TierCode)</span>
        
            @Html.ValidationMessageFor(model => model.TierCode)
       
</td></tr>
        <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.ptier.name")
       </strong></td>  <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span>
            @Html.ValidationMessageFor(model => model.Name)
        
</td></tr>
       <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.ptier.description")

        </strong></td>  <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Description)</span>
            @Html.ValidationMessageFor(model => model.Description)
        
</td></tr>
</table>
</fieldset>
    
    <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            <input name="Create" type="reset" value="Clear" class="button-style-one"/>
            

        </fieldset>
 </div><!-- end of div#primary-controls -->

}

</div>

