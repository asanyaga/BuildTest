@model Distributr.HQ.Lib.ViewModels.Admin.ReOrderLevelViewModel.ReOrderLevelViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.reorder.form.title.edit");
}
<p style="color: Red;">@ViewBag.msg</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2 id="breadcrumb-holder">
    GLOBAL SETTINGS &gt; <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.reorder.form.breadcrumb.view"), "/ListReOrderLevels")</span>
    &gt;@Html.GetText("hq.reorder.form.breadcrumb.edit")</h2>
<div id="main-content-housing">
    @using (Html.BeginForm())
    {
    
        @Html.ValidationSummary(true)

        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.reorder.form.details.edit")</legend>
                <table class="detail-arrange">
                    <tr>
                        <td style="padding-top: 12px;">
                            <strong>@Html.GetText("hq.reorder.distributor") :</strong>
                        </td>
                        <td>
                            <span class="text-box-cshtml">@Html.DropDownListFor(model => model.DistributorId, new SelectList(ViewBag.DistributorList, "Key", "Value"), "-----Select Distributor-----")</span>
                            <span class="inline-error">@Html.ValidationMessageFor(model => model.DistributorId)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;">
                            <strong>@Html.GetText("hq.reorder.product") :</strong>
                        </td>
                        <td>
                            <span class="text-box-cshtml">@Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Product------")</span>
                            <span class="inline-error">@Html.ValidationMessageFor(model => model.ProductId)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;">
                            <strong>@Html.GetText("hq.reorder.level") :</strong>
                        </td>
                        <td>
                            <span class="text-box-cshtml">@Html.EditorFor(model => model.ProductReOrderLevel)</span>
                            <span class="inline-error">@Html.ValidationMessageFor(model => model.ProductReOrderLevel)</span>
                        </td>
                    </tr>
                </table>
                <!-- end of detail-arrange -->
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one" />
            </fieldset>
        </div>
        <!-- end of div#pr-->
    
    }
</div>
