@model Distributr.HQ.Lib.ViewModels.Admin.BankViewModels.BankBranchViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.bbranch.form.title.add");
}

<p style="color:Red;">@ViewBag.msg</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">@Html.ActionLink(
Html.GetText("hq.bankbranch.form.breadcrumb.view"), "ListBankBranches")</span> &gt; @Html.GetText("hq.bbranch.form.breadcrumb.add")</h2>

<div id="main-content-housing">

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)

       <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.bbranch.form.details.add")</legend>
                            
        <table class="detail-arrange">
        <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.bbranch.code") :</strong></td>
        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Code)</span> 
            <span class="inline-error"> @Html.ValidationMessageFor(model => model.Code)</span> 
        </td></tr>

               <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.bbranch.bank") :</strong></td>
       <td><span class="text-box-cshtml"> @Html.DropDownListFor(model => model.BankId, new SelectList(ViewBag.BankList, "Key", "Value"), "--------  Select Bank  ---------") </span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.BankId)</span> 
       </td></tr>

         <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.bbranch.name") :</strong></td>
         <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.Name)</span> 
         </td></tr>



        

       <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.bbranch.description") :</strong></td>
       <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Description)</span> 
           <span class="inline-error">  @Html.ValidationMessageFor(model => model.Description)</span> 
        </td></tr>

      
            </table><!-- end of detail-arrange -->

        </fieldset>

   <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            <input name="Create" type="reset" value="Clear" class="button-style-one"/>
    </fieldset>

 </div><!-- end of div#pr-->
    
}
</div>

