@model Distributr.HQ.Lib.ViewModels.Admin.Product.PromotionDiscountViewModel

@{
    ViewBag.Title = "EditFOCDiscount";
}

<div>
    @Html.ActionLink("View Free Of Charge Discounts", "/ListFOCDiscounts")
</div><br />
<h2>Edit Promotion</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


   
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>

        @Html.HiddenFor(model => model.Id)

               <table width="700px">
       <tr><td>
        <div class="editor-label">
            @Html.Label("Product")
        </div></td><td>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.Product,new SelectList(ViewBag.ProductList,"Key","Value"),"-----Select Product------")
            @Html.ValidationMessageFor(model => model.Product)
        </div></td></tr>
        <tr><td>
        <div class="editor-label">
            @Html.Label("Sale Product Quantity")
        </div></td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParentProductQuantity)
            @Html.ValidationMessageFor(model => model.ParentProductQuantity)
        </div></td></tr>
        <tr><td>
<div class="editor-label">
            @Html.LabelFor(model => model.FreeProduct)
        </div></td><td>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FreeProduct, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Free Product------")
            @Html.ValidationMessageFor(model => model.FreeProduct)
        </div></td></tr>
        <tr><td>
        <div class="editor-label">
            @Html.Label("Free Quantity")
        </div></td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.FreeOfChargeProductQuantity)
            @Html.ValidationMessageFor(model => model.FreeOfChargeProductQuantity)
        </div>
</td></tr>
        

        <tr><td>

        <div class="editor-label">
            @Html.Label("Effective Date")
        </div></td><td>
        <div class="editor-field">
            @Html.TextBox("EffectiveDate", DateTime.Now.ToShortDateString(), new { @id = "datepicker" })
            @Html.ValidationMessageFor(model => model.EffectiveDate)
        </div></td></tr>

        <tr><td></td>
            <td><input type="submit" value="Save"  class="button"/></td>
        </tr></table>
    </fieldset>
}



