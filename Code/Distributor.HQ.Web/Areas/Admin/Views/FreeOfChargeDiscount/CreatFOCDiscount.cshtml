@model Distributr.HQ.Lib.ViewModels.Admin.Product.PromotionDiscountViewModel

@{
    ViewBag.Title = "CreatFOCDiscount";
}
<div>
    @Html.ActionLink("View Free Of Charge Discounts", "/ListFOCDiscounts")
</div><br />
<h2> Add Promotion</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#div_product").hide();
        $("#div_discount").hide();
        $(":radio:eq(0)").click(function () {
            $("#div_product").show(1000);
            $("#div_discount").hide(1000);
        });

        $(":radio:eq(1)").click(function () {
            $("#div_product").hide(1000);
            $("#div_discount").show(1000);
        });

    });
</script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>

        

       <table width="700px">
       <tr><td>
        <div class="editor-label">
            @Html.Label("Product")
        </div></td><td>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.Product,new SelectList(ViewBag.ProductList,"Key","Value"),"-----Select Product------")
            @Html.ValidationMessageFor(model => model.Product)
        </div></td></tr>
        <tr><td>
        <div class="editor-label">
            @Html.Label("Sale Product Quantity")
        </div></td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParentProductQuantity)
            @Html.ValidationMessageFor(model => model.ParentProductQuantity)
        </div></td></tr>

        <tr>
        
        <td>
        <div id="div_product">Some text in div.
<div class="editor-label">
            @Html.LabelFor(model => model.FreeProduct)
        </div></div></td><td>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FreeProduct, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Free Product------")
            @Html.ValidationMessageFor(model => model.FreeProduct)
        </div></td>
        
        </tr>
        

        <tr><td>
        <div class="editor-label">
            @Html.Label("Free Quantity")
        </div></td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.FreeOfChargeProductQuantity)
            @Html.ValidationMessageFor(model => model.FreeOfChargeProductQuantity)
        </div>
</td></tr>
        <div id="div_discount">Discount.</div>

        <tr><td>

        <div class="editor-label">
            @Html.Label("Effective Date")
        </div></td><td>
        <div class="editor-field">
            @Html.TextBox("EffectiveDate", DateTime.Now.ToShortDateString(), new { @id = "datepicker" })
            @Html.ValidationMessageFor(model => model.EffectiveDate)
        </div></td></tr>

        <tr><td><input type="submit" value="Save"  class="button"/></td>
            <td><input type="reset" value="Clear"  class="button"/></td>
        </tr></table>
    </fieldset>
}
  <input type="radio" name="lang_anz" value="1"/> Yes<br/>
    <input type="radio" name="lang_anz" value="0" checked="checked"/> No<br/>
    
    

        
   