@model Distributr.HQ.Lib.ViewModels.Admin.SettingsViewModel.RetireSettingViewModel
@{
	ViewBag.Title = "Create";
}
<h2 id="breadcrumb-holder">
	Global Settings &nbsp; &gt;&nbsp;Settings &nbsp; @*<span class="bc-example">@Html.ActionLink("View Settings", "/ListSettings")</span>*@
	&gt; Add Setting</h2>
<br />
@if (ViewBag.msg != null)
{
	<div class="notice-notification">
		@ViewBag.msg
	</div>
}
<div id="main-content-housing">
	<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
	@using (Html.BeginForm())
 {
@*@Html.ValidationSummary(true)*@
	 if (!Html.ViewData.ModelState.IsValid)
	 {
		<div class="notice-notification">
			@Html.ValidationSummary()
		</div>
	 }
		<div id="primary-controls">
			<fieldset>
				<legend>Retire Setting</legend>
				<table class="detail-arrange">
					<tr>
						<td>
							<div class="editor-label">
								@Html.LabelFor(model => model.RetireTypeId)
							</div>
						</td>
						<td>
							<div class="editor-field">
								@Html.DropDownListFor(model => model.RetireTypeId, new SelectList(ViewBag.RetireTypeList, "value", "text"), "-----Select Retire Type")
								@Html.ValidationMessageFor(model => model.RetireTypeId)
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<div class="editor-label">
								@Html.LabelFor(model => model.Duration)
							</div>
						</td>
						<td>
							<div class="editor-field">
								@Html.EditorFor(model => model.Duration)
								@Html.ValidationMessageFor(model => model.Duration)
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<div class="editor-label">
								@Html.LabelFor(model => model.IsActive)
							</div>
						</td>
						<td>
							<div class="editor-field">
								@Html.EditorFor(model => model.IsActive)
								@Html.ValidationMessageFor(model => model.IsActive)
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<p>
								<input type="submit" value="Create" />
							</p>
						</td>
					</tr>
				</table>
			</fieldset>
		</div>
 }
</div>
<div>
	@Html.ActionLink("Back to List", "Index")
</div>
