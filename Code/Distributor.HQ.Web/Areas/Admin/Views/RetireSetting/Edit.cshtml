@model Distributr.HQ.Lib.ViewModels.Admin.SettingsViewModel.RetireSettingViewModel
@{
	ViewBag.Title = "Edit";
}
<h2 id="breadcrumb-holder">
	Global Settings &nbsp; &gt;&nbsp;Retire Settings &nbsp;&gt; Edit Setting</h2>
<div id="main-content-housing">
	<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
	@using (Html.BeginForm())
 {
		@Html.ValidationSummary(true)
		<div id="primary-controls">
			<fieldset>
				<legend>Retire Setting ViewModel</legend>
				<table class="detail-arrange">
					<tr>
						<td>
							@Html.HiddenFor(model => model.Id)
							<div class="editor-label">
								@Html.LabelFor(model => model.RetireTypeId)
							</div>
						</td>
						<td>
							<div class="editor-field">
								@Html.DropDownListFor(model => model.RetireTypeId, new SelectList(ViewBag.RetireTypeList, "value", "text"), "-----Select Retire Type")
								@Html.ValidationMessageFor(model => model.RetireTypeId)
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<div class="editor-label">
								@Html.LabelFor(model => model.Duration)
							</div>
						</td>
						<td>
							<div class="editor-field">
								@Html.TextBoxFor(model => model.Duration, new { style = "width:300px;height:20px" }) Days
								@Html.ValidationMessageFor(model => model.Duration)
							</div>
						</td>
					</tr>
				</table>
			</fieldset>
		
		<input type="submit" value="Save" class="button-style-one"/>
		@Html.ActionLink("| Back |", "Index")
		
		</div>
 }
</div>

