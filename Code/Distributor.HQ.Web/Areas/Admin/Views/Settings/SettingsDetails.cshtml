@model Distributr.HQ.Web.Areas.Admin.Models.SettingsInDetailViewModel

@{
    ViewBag.Title = "Settings Details";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2 id="breadcrumb-holder">
Global Settings &gt; Settings
</h2>

<div id="main-content-housing">
<h2 class="page-header">
        Settings Details</h2>
@if (ViewBag.msg != null)
    {
        <div class="notice-notification">
            @ViewBag.msg
        </div>
    }
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<div id="primary-control">
<fieldset>
<legend>Settings</legend>
    <table class="detail-arrange">
       
    
        <tr>
            <td style="padding-top:12px;">
                <strong> @Html.LabelFor(model => model.AllowDecimal)</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.AllowDecimal)
                    @Html.ValidationMessageFor(model => model.AllowDecimal)
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:12px;">
                <strong> @Html.LabelFor(model => model.NumberOfDecimalPlaces)</strong>
            </td>
            <td>
                <span>
                    @Html.CheckBox("AllowDecimalPlaces",(bool)ViewData["NumberOfDecimals"])
                </span>
                <div class="editor-field">
                    @Html.EditorFor(model => model.NumberOfDecimalPlaces)
                    @Html.ValidationMessageFor(model => model.NumberOfDecimalPlaces)
                </div>
            </td>
        </tr>
    
        <tr>
            <td style="padding-top:12px;">
                <strong>Approve and Dispatch</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownList("approveAndDispatch")
                </div>
            </td>
        </tr>

        <tr>
            <td style="padding-top:12px;">
                <strong>Records Per Page</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model=>model.RecordsPerPage)
                </div>
            </td>
        </tr>

        <tr>
            <td style="padding-top:12px;">
                <strong>Web Server URL</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model=>model.WebServerUrl)
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:12px;">
                <strong>Payment Gateway WSURL</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model=>model.PaymentGatewayWSUrl)
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:12px;">
                <strong> @Html.LabelFor(model => model.EnForceStockTake)</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.EnForceStockTake)
                    @Html.ValidationMessageFor(model => model.EnForceStockTake)
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:12px;">
                <strong> @Html.LabelFor(model => model.EnableGps)</strong>
            </td>
            <td>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.EnableGps)
                    @Html.ValidationMessageFor(model => model.EnableGps)
                </div>
            </td>
        </tr>
    </table>
</fieldset>
<fieldset class="actions">
<legend>Actions</legend>
<input name="Create" type="submit" value="Save" class="button-style-one" id="submitform"/>
 @*<input name="Create" type="reset" value="Clear" class="button-style-one"/>*@
            
</fieldset>

</div>


}

