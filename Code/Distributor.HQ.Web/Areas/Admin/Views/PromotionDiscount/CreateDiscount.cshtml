@model Distributr.HQ.Lib.ViewModels.Admin.Product.PromotionDiscountViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.promodisc.form.title.add");
}

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  
    <span class="bc-example">
        @Html.ActionLink(Html.GetText("hq.promodisc.breadcrumb.view"), "/ListFOCDiscounts")
    </span> &gt;Edit Promotion Discount
</h2>

<div id="main-content-housing">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#div_product").show();
            $("#div_discount").hide();
            $(":radio:eq(0)").click(function () {
                $("#div_product").show(1000);
                $("#div_discount").hide(1000);
            });

            $(":radio:eq(1)").click(function () {
                $("#div_product").hide(1000);
                $("#div_discount").show(1000);
            });
        });
    </script>
    <script type="text/javascript">
        $(function () {
            $("#EffectiveDate, #EndDate").datepicker({
                dateFormat: "dd-M-yy",
                //changeMonth: true,
                //changeYear: true,
                showStatus: true,
                highlightWeek: true,
                showAnim: 'scale',
                firstDay: 6,
                buttonImage: '@Url.Content("~/Content/Images/cal.gif")',
            buttonImageOnly: true,
            showOn: "button",
            showOptions: {
                origin: ['top', 'left']
            },
            onSelect: function () {
            }
        });
        $('#datepicker').datepicker();
    });
    </script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.promodisc.form.details.add")</legend>
                <table width="700px">
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.product")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.Product, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Product------")
                                @Html.ValidationMessageFor(model => model.Product)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.saleprodquantity")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.ParentProductQuantity)
                                @Html.ValidationMessageFor(model => model.ParentProductQuantity)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div id="div_product" style="float: inherit;">
                                <table>
                                    <tr>
                                        <td>
                                            <div class="editor-label">
                                                @Html.GetText("hq.disc.freeprod")
                                            </div>
                                        </td>
                                        <td style="padding: 0px 8px 0px 70px">
                                            <div class="editor-field">
                                                @Html.DropDownListFor(model => model.FreeProduct, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Free Product------")
                                                @Html.ValidationMessageFor(model => model.FreeProduct)
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="editor-label">
                                                @Html.GetText("hq.disc.freequantity")
                                            </div>
                                        </td>
                                        <td style="padding: 0px 8px 0px 70px">
                                            <div class="editor-field">
                                                @Html.EditorFor(model => model.FreeOfChargeProductQuantity)
                                                @Html.ValidationMessageFor(model => model.FreeOfChargeProductQuantity)
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div id="div_discount" style="float: left;">
                                <table width="700px">
                                    <tr>
                                        <td>
                                            <div class="editor-label">
                                                @Html.GetText("hq.disc.discrate")
                                            </div>
                                        </td>
                                        <td style="padding: 0px 8px 0px 70px">
                                            <div class="editor-field">
                                                @Html.EditorFor(model => model.DiscountRate)
                                                @Html.ValidationMessageFor(model => model.DiscountRate)
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.edate")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("EffectiveDate", Model.EffectiveDate.ToString("dd-MMM-yyyy"), new {@id = "EffectiveDate"})
                                @Html.ValidationMessageFor(model => model.EffectiveDate)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                End Date
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("EndDate", Model.EndDate.ToString("dd-MMM-yyyy"), new {@id = "EndDate"})
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one" />
            <input name="Create" type="reset" value="Clear" class="button-style-one" />
        </fieldset>
    
    }
</div>



