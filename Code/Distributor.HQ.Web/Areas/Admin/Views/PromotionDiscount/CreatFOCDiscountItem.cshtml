@model Distributr.HQ.Lib.ViewModels.Admin.Product.PromotionDiscountViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = "CreatFOCDiscountItem";
}

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">@Html.ActionLink("View Promotion Discounts", "/ListFOCDiscounts", new { id = @Model.Id })</span> &gt; Add Promotion Items</h2>

<div id="main-content-housing">

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#div_product").show();
        $("#div_discount").hide();
        $(":radio:eq(0)").click(function () {
            $("#div_product").show(1000);
            $("#div_discount").hide(1000);
        });

        $(":radio:eq(1)").click(function () {
            $("#div_product").hide(1000);
            $("#div_discount").show(1000);
        });

    });
</script>
<script type="text/javascript">
    $(function () {
        $('.date').datepicker({
            showStatus: true,
            highlightWeek: true,
            showAnim: 'scale',
            firstDay: 6,
            buttonImage: '@Url.Content("~/Content/Images/cal.gif")',
            buttonImageOnly: true,
            showOn: "button",
            showOptions: {
                origin: ['top', 'left']
            },
            onSelect: function () {

            }
        });
        $('#datepicker').datepicker();
    });
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div id="primary-controls">
    <fieldset>
        <legend>Promotion Items</legend>

        <table width="700px">
        <tr><td>Promotion Product</td><td>@ViewBag.ProductName</td></tr>
        <tr><td>
        <div class="editor-label">
            @Html.Label("Promotion Product Quantity")
        </div></td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParentProductQuantity)
            @Html.ValidationMessageFor(model => model.ParentProductQuantity)
        </div></td></tr>
            
       <tr>
        <td colspan="2"><div id="div_product" style="float:inherit;"><table>
        <tr><td>
        <div class="editor-label">
            @Html.LabelFor(model => model.FreeProduct)
        </div>
        </td>
        <td style="padding:0px 8px 0px 70px">
                <div class="editor-field">
            @Html.DropDownListFor(model => model.FreeProduct, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Free Product------")
            @Html.ValidationMessageFor(model => model.FreeProduct)
        </div>
        </td>
        
        </tr>
        <tr><td>  
                <div class="editor-label">
            @Html.Label("Free Quantity")
        </div></td><td style="padding:0px 8px 0px 70px">
        <div class="editor-field">
            @Html.EditorFor(model => model.FreeOfChargeProductQuantity)
            @Html.ValidationMessageFor(model => model.FreeOfChargeProductQuantity)
        </div>

        </td></tr></table></div>

        <div id="div_discount" style="float:left;">
       <table width="700px"><tr><td><div class="editor-label">
            @Html.Label("Discount Rate")</div></td>
       <td style="padding:0px 8px 0px 70px">
       <div class="editor-field">
       @Html.EditorFor(model => model.DiscountRate)
       @Html.ValidationMessageFor(model => model.DiscountRate)
       </div>
       </td>
       </tr></table>
       </div>
       </td>
        </tr>
            <tr><td>
                    <div class="editor-label">
                        @Html.Label("Effective Date")
                    </div></td><td>
                                   <div class="editor-field">
                                       @Html.TextBox("EffectiveDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @id = "datepicker" })
                                       @Html.ValidationMessageFor(model => model.EffectiveDate)
                                   </div>
                               </td></tr>
            <tr><td>
        <div class="editor-label">
            @Html.Label("End Date")
        </div></td><td>
        <div class="editor-field">
              @Html.TextBox("EndDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @id = "datepicker" })
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>
</td></tr>
        </table>
        @*<tr><td></td><td>
           <input type="submit" value="Save"  class="button-style-one"/> <input type="reset" value="Clear"  class="button-style-one"/></td></tr>
       </table>*@
    </fieldset></div>
    <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            <input name="Create" type="reset" value="Clear" class="button-style-one"/>    
    </fieldset>
}

</div>

