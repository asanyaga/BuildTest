<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.pdgroupitm.form.breadcrumb.view"), "/ListProductGroupDiscountItems", new { id = ViewBag.Id, discountGroupName = ViewBag.DiscountGroupName })</span> &gt; Product Group Discount Items</h2>
<br />
@Html.GetText("hq.disc.discgrp") : @ViewBag.DiscountGroupName
<br />
@Html.GetText("hq.disc.prodname") : @ViewBag.ProductName
<br />
<div id="main-content-housing">

    <script type="text/javascript">
