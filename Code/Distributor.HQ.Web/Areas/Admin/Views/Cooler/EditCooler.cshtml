@model Distributr.HQ.Lib.ViewModels.Admin.CoolerViewModel.CoolerViewModel

@{
    ViewBag.Title = "EditCooler";
}
<p style="color:Red;">@ViewBag.msg</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">  @Html.ActionLink("View Coolers", "ListCoolers")</span> &gt; Add New Cooler </h2>

<div id="main-content-housing">

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true)

    <div id="primary-controls">

    <fieldset>
    <legend>Cooler Details</legend>
                            
        <table class="detail-arrange">

        <tr><td style="padding-top:12px;"><strong>Cooler Type :</strong></td>
        <td><span class="text-box-cshtml">@Html.DropDownListFor(model => model.CoolerTypeId,new SelectList(ViewBag.CoolerTypeList, "Key", "Value"),"----  Select Cooler Type  ----" ) </span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.CoolerTypeId)</span> 
       </td></tr>

         <tr><td style="padding-top:12px;"><strong>Cooler Name :</strong></td>
         <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.Name)</span> 
        </td></tr>

         <tr><td style="padding-top:12px;"><strong>Cooler Code :</strong></td>
         <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Code)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.Code)</span> 
        </td></tr>

        <tr><td style="padding-top:12px;"><strong>Capacity :</strong></td>
        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Capacity)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.Capacity)</span> 
        </td></tr>

        <tr><td style="padding-top:12px;"><strong>Serial No :</strong></td>
        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.SerialNo)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.SerialNo)</span> 
        </td></tr>

      <tr><td style="padding-top:12px;"><strong>Asset No :</strong></td>
      <td><span class="text-box-cshtml"> @Html.EditorFor(model => model.AssetNo)</span> 
            <span class="inline-error"> @Html.ValidationMessageFor(model => model.AssetNo)</span> 
       </td></tr>

     </table><!-- end of detail-arrange -->

   </fieldset>

   <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
        
    </fieldset>

 </div><!-- end of div#pr-->
    
}
</div>




