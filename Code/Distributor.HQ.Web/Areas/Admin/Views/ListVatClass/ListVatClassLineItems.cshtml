@model Distributr.HQ.Lib.ViewModels.Admin.CostCenter.EditVatClassViewModel

@{
    ViewBag.Title = "ListVatClassLineItems";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>

	<h2 id="breadcrumb-holder">Global Settings &nbsp; &gt;&nbsp;Vat &nbsp; &gt;&nbsp;<span class="bc-example">@Html.ActionLink("View Vat Rates", "/ListVat")</span> &gt;Vat Lineitems</h2>
@if(ViewBag.msg != null){
<div class="notice-notification">
@ViewBag.msg
</div>        
}
<div id="main-content-housing">




  <fieldset class="actions">
    <legend>Actions</legend>
    <div class="button-style-two-cshtml">@Html.ActionLink("Add VatClass Lineitem", "/AddVatClassLineItems", new { id = @Model.Id })</div>
</fieldset>
<div class="table-container">
 @*  id="tablesorter-demo"*@
<table   class="tablesorter">
<thead>
<tr><th align="center">Rate</th><th align="center">Effective Date</th></tr>
</thead><tbody>
@foreach (var item in Model.VCItems)
{
    <tr><td style="text-align:right">@String.Format("{0:F}", item.Rate)</td><td style="text-align:right"> @item.EffectiveDate.ToString("dd-MMM-yyyy")</td>@*<td>@Html.ActionLink("Edit", "EditVat1", new { id=@item.Id }) |</td>*@</tr>
}</tbody>
</table> 
</div>

</div>
