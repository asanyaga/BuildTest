@model Distributr.HQ.Lib.ViewModels.Admin.Product.CertainValueCertainProductDiscountViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.cvcp.form.title.edit");
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">@Html.ActionLink(Html.GetText("hq.cvcp.form.breadcrumb.view"), "/ListCertainValueCertainProduct")</span> &gt; Edit Certain Value Certain Product Discount</h2>
<div id="main-content-housing">
     <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
            $("#EffectiveDate, #EndDate").datepicker({
                //changeMonth: true,
                //changeYear: true,
                dateFormat: 'dd-M-yy',
                gotoCurrent: true,
                showStatus: true,
                highlightWeek: true,
                showAnim: 'scale',
                firstDay: 6,
                buttonImage: '@Url.Content("~/Content/Images/cal.gif")',
                buttonImageOnly: true,
                showOn: "button",
                showOptions: {
                    origin: ['top', 'left']
                },
                onSelect: function () {
                }
            });
           
        });
    </script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.cvcp.form.details.edit")</legend>


                @Html.HiddenFor(model => model.id)

                <table>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.initialval")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.HiddenFor(model => model.InitialValue, String.Format("{0:f}", Model.InitialValue))
                                @Html.TextBoxFor(model => model.InitialValue, new { @disabled = "true", Value=String.Format("{0:f}", Model.InitialValue) })
                                @Html.ValidationMessageFor(model => model.InitialValue)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.product")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.Product, new SelectList(ViewBag.ProductList, "Key", "Value"), "-----Select Product------")
                                @Html.ValidationMessageFor(model => model.Product)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.quantity")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Quantity)
                                @Html.ValidationMessageFor(model => model.Quantity)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.GetText("hq.disc.edate")
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("EffectiveDate", Model.EffectiveDate.ToString("dd-MMM-yyyy"), new { @id = "EffectiveDate" })
                                @Html.ValidationMessageFor(model => model.EffectiveDate)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                End Date
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("EndDate", Model.EndDate.ToString("dd-MMM-yyyy"), new { @id = "EndDate" })
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </td>
                    </tr>
                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one" />
                <input name="Create" type="reset" value="Clear" class="button-style-one" />
            </fieldset>
        </div>
    }
</div>


