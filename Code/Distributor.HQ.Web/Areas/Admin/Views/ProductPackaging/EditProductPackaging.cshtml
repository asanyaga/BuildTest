@using Distributr.HQ.Lib.Helper
@model Distributr.HQ.Lib.ViewModels.Admin.Product.AdminProductPackagingViewModel
@{
    ViewBag.Title = Html.GetText("hq.packaging.form.title.edit");
}

<h2 id="breadcrumb-holder">Products &amp; Pricing &gt; <span class="bc-example">
@Html.ActionLink(Html.GetText("hq.packaging.form.breadcrumb.view"), "/ListProductPackaging")</span> &gt; 
@Html.GetText("hq.packaging.form.breadcrumb.edit")</h2>

<div id="main-content-housing">
<p style="color:Red;">
@ViewBag.msg
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <div id="primary-controls">
        @Html.HiddenFor(model => model.Id)
   <fieldset>
        <legend>@Html.GetText("hq.packaging.form.details.edit")</legend>
       
             <table class="detail-arrange">
                 <tr>
                     <td style="padding-top:12px;"><strong>@Html.GetText("hq.packaging.form.name")</strong>
                     </td>
                     <td>
                         <span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span>
                         @Html.ValidationMessageFor(model => model.Name)
                       
                     </td>
                 </tr>
                  <tr><td style="padding-top:12px;"><strong>Code
        </strong></td>
       <td> 
       <span class="text-box-cshtml"> @Html.DisplayFor(model => model.Code, new { @disabled = "disabled", @readonly = "readonly" })</span>
          @Html.HiddenFor(model => model.Code)
        </td>
        </tr>
                <tr>
                   <td style="padding-top:12px;"><strong>@Html.GetText("hq.packaging.form.description")</strong>
                        
                    </td>
                    <td>
                      <span class="text-box-cshtml">@Html.EditorFor(model => model.Description)</span>
                            @Html.ValidationMessageFor(model => model.Description)
                        
                    </td>
                </tr>
                </table>
                </fieldset>
                <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            
            

        </fieldset>
 </div><!-- end of div#primary-controls -->
}

</div>


