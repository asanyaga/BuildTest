@model Distributr.HQ.Lib.ViewModels.Admin.CostCenter.ProvinceViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.province.form.title.add");
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
@Html.ActionLink(Html.GetText("hq.province.form.breadcrumb.view"), "ListProvinces")</span> &gt; 
@Html.GetText("hq.province.form.breadcrumb.add")</h2>

<div id="main-content-housing">
@if (ViewBag.msg != null)
{ 
    <div class="notice-notification">
@ViewBag.msg
</div>
}
@using (Html.BeginForm())
{
    if (!Html.ViewData.ModelState.IsValid)
    {
            <div class="notice-notification">
                @Html.ValidationSummary()
                  </div>
    }

    <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.province.form.details.add")</legend>
                            
        <table class="detail-arrange">

        <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.region.country") :</strong></td>
        <td><span class="text-box-cshtml">
     @Html.DropDownListFor(model => model.CountryId, new SelectList(ViewBag.CountryList, "Key", "Value"), "----Select Country----") </span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.CountryId)</span> 
        </td></tr>

        <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.region.province") :</strong></td>
        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span> 
           <span class="inline-error"> @Html.ValidationMessageFor(model => model.Name)</span> 
        </td></tr>
   </table><!-- end of detail-arrange -->
        </fieldset>
   <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            <input name="Create" type="reset" value="Clear" class="button-style-one"/>
    </fieldset>
 </div><!-- end of div#pr-->
    
}
</div>


