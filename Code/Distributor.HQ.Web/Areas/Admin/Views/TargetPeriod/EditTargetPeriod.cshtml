@model Distributr.HQ.Lib.ViewModels.Admin.DistributorTargetsViewModel.TargetPeriodViewModel
@{
    ViewBag.Title = "EditTargetPeriod";
}
<h2 id="breadcrumb-holder">Global Settings &nbsp; &gt;&nbsp;Distributor Targets &nbsp;&gt; <span class="bc-example">@Html.ActionLink("View Target Periods", "ListTargetPeriods")</span> &gt; Edit Target Period</h2>

<div id="main-content-housing">


    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.date').datepicker({
                showStatus: true,
                highlightWeek: true,
                showAnim: 'scale',
                firstDay: 6,
                buttonImage: '@Url.Content("~/Content/Images/cal.gif")',
            buttonImageOnly: true,
            showOn: "button",
            showOptions: {
                origin: ['top', 'left']
            },
            onSelect: function () {

            }
        });
        $('#datepicker').datepicker();
        $('#datepicker2').datepicker();
    });
    </script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)  
        <div id="primary-controls">
            <fieldset>
                <legend>Target Period</legend>

                <table class="detail-arrange">

                    <tr>
                        <td style="padding-top: 12px;"><strong>Name</strong></td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Start Date</strong></td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("StartDate", Model.StartDate.ToString("dd-MMM-yyyy"), new { @id = "datepicker" })
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>End Date</strong></td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("EndDate", Model.EndDate.ToString("dd-MMM-yyyy"), new { @id = "datepicker2" })
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>

                        </td>

                    </tr>

                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one" />



            </fieldset>
        </div>
        <!-- end of div#primary-controls -->
    }
</div>


