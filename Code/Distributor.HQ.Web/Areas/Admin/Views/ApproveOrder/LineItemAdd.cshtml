@model Distributr.HQ.Lib.ViewModels.Admin.Orders.OrderAddLineItemViewModel

@{
    ViewBag.Title = "LineItemAdd";
}


<h2 id="breadcrumb-holder">ORDERS &amp; Distributor Orders &gt; <span class="bc-example">@Html.ActionLink("List Orders", "ListAllOrders", "Orders")</span> &nbsp;&gt;&nbsp;<span class="bc-example">@Html.ActionLink("Process Orders", "Index", new { orderid = Model.DocumentId })</span> &nbsp;&gt;LineItem Add </h2>
<div id="main-content-housing">
 <h2 class="page-header">Add Line Item</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Order - Add Line Item</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DocumentRef) : @Model.DocumentRef
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DocumentId) : @Model.DocumentId
        </div>
        <div class="editor-label">
        Select Product
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(n => n.ProductId, Model.ProductLookup)
        </div>
        <div class="editor-field">
        @Html.Label("Bulk")
      @*  @Html.RadioButton("QuantityType","Bulk")*@
        @Html.RadioButtonFor(model=>model.QuantityType,true)
        @Html.Label("Units")
       @* @Html.RadioButton("QuantityType","Units",true)*@
       @Html.RadioButtonFor(model => model.QuantityType, false, new { Checked="checked" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Qty)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Qty)
            @Html.ValidationMessageFor(model => model.Qty)
        </div>

        <p>
            <input type="submit" value="Save" class="button-style-one"/>
        </p>
    </fieldset>
}
</div>


