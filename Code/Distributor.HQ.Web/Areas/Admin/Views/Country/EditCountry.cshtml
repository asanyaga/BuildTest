@model Distributr.HQ.Lib.ViewModels.Admin.CostCenter.CountryViewModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.country.form.title.edit");
}

<p style="color:Red;">
@ViewBag.msg
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
@Html.ActionLink(Html.GetText("hq.country.form.breadcrumb.view"), "/ListCountry")</span> &gt; 
@Html.GetText("hq.country.form.breadcrumb.edit")</h2>

<div id="main-content-housing">

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)

    <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.country.form.details.add")</legend>
                            
        <table class="detail-arrange">

                <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.region.countrycode") :</strong></td>
                    <td><span class="text-box-cshtml"> @Html.EditorFor(model => model.Code)</span> 
                        <span class="inline-error">  @Html.ValidationMessageFor(model => model.Code)</span> 
                    </td>
                </tr>

                <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.region.countryname") :</strong></td>
                    <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span> 
                         <span class="inline-error">  @Html.ValidationMessageFor(model => model.Name)</span> 
                    </td>
                </tr>
    
               <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.region.currency") :</strong></td>
                    <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Currency)</span> 
                        <span class="inline-error"> @Html.ValidationMessageFor(model => model.Currency)</span>
                    </td>
                </tr>

            </table><!-- end of detail-arrange -->

        </fieldset>

   <fieldset class="actions">
            <legend>Actions</legend>
            <input name="Create" type="submit" value="Save" class="button-style-one"/>
            
    </fieldset>

 </div><!-- end of div#pr-->
    
}
</div>

