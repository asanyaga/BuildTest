@using Distributr.HQ.Lib.Helper
@model Distributr.HQ.Lib.ViewModels.Admin.Product.AdminProductPackagingTypeViewModel
@{
    ViewBag.Title = Html.GetText("hq.packagingtype.form.title.edit");
}

	<h2 id="breadcrumb-holder">Products &amp; Pricing &gt; <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.packagingtype.form.breadcrumb.view"), "/ListProductPackagingType")</span> &gt; @Html.GetText("hq.packagingtype.form.breadcrumb.edit")</h2>

<div id="main-content-housing">
<br />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
