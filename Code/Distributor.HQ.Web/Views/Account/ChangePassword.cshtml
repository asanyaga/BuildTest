@model Distributr.HQ.Lib.ViewModels.ChangePasswordModel
@using Distributr.HQ.Lib.Helper
@{
    ViewBag.Title = Html.GetText("hq.changepwd.title");
}
<h2 id="breadcrumb-holder">Account &gt;@Html.GetText("hq.changepwd.breadcrumb")</h2>
 <div id="main-content-housing">
 <h2 class="page-header">@Html.GetText("hq.changepwd.heading")</h2>
  <div id="primary-controls">
                           @* <fieldset>
                            <legend>Import From Excel</legend>
                            	 <div class="button-style-two-cshtml">@Html.ActionLink("Import From Excel", "ImportUsers")</div>
                                </fieldset>*@
                            </div><!-- end of div#primary-controls -->

@if (ViewBag.msg != null)
{
<div class="notice-notification">
@ViewBag.msg
</div>
}
@using (@Html.BeginForm())
{
@Html.ValidationSummary()
}

<div class="main-content-paragraph">

<p>
    @Html.GetText("hq.changepwd.pgraph1")
</p>
<p>
    @Html.GetText("hq.changepwd.line1") @ViewBag.PasswordLength @Html.GetText("hq.changepwd.line2")
</p>
</div>
<p style="color:Red;">
@ViewBag.msg
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, Html.GetText("hq.changepwd.validation.error"))
   <div id="primary-controls">
    <fieldset>
    <legend>@Html.GetText("hq.changepwd.details")</legend>
   				
        <table class="detail-arrange">
            <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.pwd.oldpwd")</strong></td><td>
           <span class="text-box-cshtml">
                @Html.PasswordFor(m => m.OldPassword)</span>
                @Html.ValidationMessageFor(m => m.OldPassword)
            </td></tr>
            <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.pwd.newpwd")</strong></td><td>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div></td></tr>
            <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.pwd.confpwd")</strong></td><td>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div></td></tr></table>
        </fieldset>
        <fieldset class="actions">
            <legend>Actions</legend>
            
           
            <input type="submit" value="Change Password"  class="button-style-one"/>
<input type="reset" value="Clear"  class="button-style-one"/>
        </fieldset>
            
    </div>
}
</div>