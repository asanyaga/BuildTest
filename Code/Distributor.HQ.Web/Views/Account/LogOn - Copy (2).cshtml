@model Distributr.HQ.Lib.ViewModels.LogOnModel

@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_blankLayout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    #error-loging-in
    {
        background-color:#ffc9c9; 
        padding:10px; 
        border:5px solid #cd3d3d; 
        
        border-radius:5px;
        width:500px;
        margin:0 auto;
        margin-top:20px;
        text-align:center;
    }
    
    #error-loging-in ul li
    {
        margin-top:10px;
        list-style-type:none;
        
    }
</style>
@if (!Html.ViewData.ModelState.IsValid)
{
<div id="error-loging-in">
        @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
        </div>
    }





<div id="login-container">
    	<div id="login-wrap">
        	<div id="product-description">
            <p><em>Improve your productivity, reduce your sales cycle turn-around time and manage your sales processes while reducing your costs by implementing the Virtual City Distributr solution. </em></p>
            	<p><b>Virtual City Distributr&trade;</b> automates your sales force processes and gives you access to real-time, accurate information on transactions in your supply chain from the sales agent in the field, to the Distributors and right up to the organisational headquarters</p>
            </div><!-- end of div#product-description -->
            <div id="product-login-form">
@using (Html.BeginForm())
{
                	<h3>User Login</h3>
                	<p class="labels">Username</p>
    <div class="login">@Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)</div>
                    
                    <p class="labels">Password</p>
    <div class="login">
                    @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
                </div>
                    <input id="login-submit" type="submit" value="Login" />
                    <div id="remember-me">
                    	 @Html.LabelFor(m => m.RememberMe)                
                @Html.CheckBoxFor(m => m.RememberMe)
                    </div>
}
            </div><!-- end of div#product-login-form -->
            <div class="clear-all"></div>
        	
        </div><!-- end of div#login-wrap -->
    	
    </div><!-- end of div#login-container -->
   
    