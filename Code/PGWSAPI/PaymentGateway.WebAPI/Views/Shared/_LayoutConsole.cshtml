@using PaymentGateway.WebAPI.Models
@using PaymentGateway.WSApi.Lib.Util
<!DOCTYPE html>
<html>
    <head>
        <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/logo.ico")" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" media="screen"/>
        <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                $("#accordion").accordion({
                    active: 'h2.menu@(Html.Area())'
                });
            });
       
        </script>
    </head>
    <body>
        <table border="0" cellpadding ="0" cellspacing ="0" width="100%">
            <tr>
                <td valign="top" colspan="2" class="topbar">
                    <img src="@Url.Content("~/Content/images/Logo.png")"  height="60px"/>
                </td>            
            </tr>
            <tr>
                <td valign="top" colspan="2" class="topmenubar">
                    <div style="float:right;">
                        @Html.ActionLink("Logout", "Logout", "Account", new {area=""},new { })
                    </div> 
                </td>
            </tr>
            <tr>
                <td valign="top" style="width:17%;">
                    <h2 id="menu-heading">  Main Menu </h2>
                    <div class="leftmenu">
                        <div id="accordion">
                            <h2 class='menuConsole'>
                                <a href="#">Administration</a></h2>
                            <ul class="menulist">
                                @*@Html.MenuItem("Welcome", "Index", "Console", "Console", "selected")*@
                                @Html.MenuItem("Manage Service Provider", "Index","ServiceProvider", "Console", "selected")
                                @Html.MenuItem("Manage System Users", "Index", "User", "Console", "selected")                      
                                @Html.MenuItem("Manage Farmers", "RegisterFarmers", "Farmers", "Console", "selected")  
                                @Html.MenuItem("Manage Client", "Index", "SmsClient", "Console", "selected")                    
                                @*@Html.MenuItem("Welcome", "Index", "Console", "Console", "selected")*@                       
                            </ul>                 
                            <h2 class='menuReports'> <a href="#">Report</a></h2>
                            <ul class="menulist">
                                @Html.MenuItem("Service Provider", "ServiceProvider", "Report", "Reports", "selected")   
                                @Html.MenuItem("Audit Log", "Index", "AuditLog", "Console", "selected")                      
                                           
                            </ul>  
                        </div>
                    </div>
                </td>
                <td valign="top" class="content">
                    @RenderBody()
                </td>
              
            </tr>
        </table>
                          <div id="footer"><div style="position:absolute; right:5px;">@Html.GetVersion()</div>
        	<div id="powered-by">
            	<p>Powered By</p>
                <div id="virtual-city-logo">
                	<a target="_blank" href="http://www.virtualcity.co.ke"><span class="img-replace">Virtual City Ltd | Innovation Lives Here</span></a>
                    
                </div><!-- end of virtual-city-logo -->
               
            </div><!-- end of div#powered-by -->
        </div><!-- end of div#footer -->
    @RenderSection("scripts", required: false)

    </body>
</html>

