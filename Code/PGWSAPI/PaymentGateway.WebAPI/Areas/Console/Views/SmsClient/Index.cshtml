@using PaymentGateway.WSApi.Lib.Paging;

@model IPagedList<PaymentGateway.WSApi.Lib.Domain.MasterData.Client>
@{
    ViewBag.Title = "Index";
}

<h2>Sms Client</h2>
<div class="main-content">

<div id="action-link">
    @Html.ActionLink("Create New", "Create")
</div>
<table class="data-table">
    <tr>
       
        <th>
            Name
        </th>
        <th>
            Keyword
        </th>
        <th>
            Uri
        </th>
        <th>
            App
        </th>
        <th>
            App Password
        </th>        
        <th></th>
         <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @item.Name
        </td>
        <td>
            @item.Code
        </td>
        <td>
            @item.Path
        </td>
        <td>
            @item.ApplicationId
        </td>
        <td>
          @item.ApplicationPassword
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
        </td>
        <td>
            @Html.ActionLink("Members", "Members", new { clientId=item.Id }) |
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id },
            new { onclick = "return confirm('Are you sure you want to delete " + item.Name + "?')" })
        </td>
    </tr>
}

</table>
<div class="pager">		
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
</div>  
    </div>
