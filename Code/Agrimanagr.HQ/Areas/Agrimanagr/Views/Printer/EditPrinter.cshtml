@using Distributr.HQ.Lib.Helper
@model Distributr.HQ.Lib.ViewModels.Agrimanagr.EquipmentViewModel.PrinterViewModel

@{
    ViewBag.Title = Html.GetText("hq.printer.form.title.edit");
}

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.printer.form.breadcrumb.view"), "ListPrinters")</span> &gt; 
    @Html.GetText("hq.printer.form.breadcrumb.edit")</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div id="primary-controls">
    <fieldset>
        <legend>@Html.GetText("hq.printer.form.details.edit")</legend>
        @Html.HiddenFor(model => model.Id)
            <table class="detail-arrange">
         <tr>
                 <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.Name")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.Code")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.EquipmentNumber")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.EquipmentNumber)
                            @Html.ValidationMessageFor(model => model.EquipmentNumber)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.Make")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Make)
                            @Html.ValidationMessageFor(model => model.Make)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.Model")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Model)
                            @Html.ValidationMessageFor(model => model.Model)
                        </td>
                    </tr>
                  <tr><td style="padding-top:12px;"><strong>@Html.GetText("hq.printer.EquipmentType")</strong></td>
                    <td>
                        @Html.DropDownListFor(model => model.EquipmentType, new SelectList(ViewBag.EquipmentTypeList, "Key", "Value"), "----Select Equipment Type----")
                        @Html.ValidationMessageFor(model => model.EquipmentType)
                    </td>
                </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.Description")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
               
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.CostCentre")</strong></td>
                        <td>
                            @Html.DropDownListFor(model => model.CostCentre, new SelectList(ViewBag.CostCentreList, "Key", "Value"), "----Select CostCentre----")
                            @Html.ValidationMessageFor(model => model.CostCentre)
                        </td>
                    </tr>

            <tr>
                <td style="padding-top: 12px;"><strong>@Html.GetText("hq.printer.EquipmentType")</strong></td>
                <td>
                    @Html.DropDownListFor(model => model.EquipmentType, new SelectList(ViewBag.EquipmentTypeList, "Key", "Value"), "----Select Equipment Type ----")
                    @Html.ValidationMessageFor(model => model.EquipmentType)
                </td>
            </tr>
         </table>
    </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one" />
            </fieldset>
           
  </div>
}

<div>
    @Html.ActionLink("Back to List", "ListPrinters")
</div>
