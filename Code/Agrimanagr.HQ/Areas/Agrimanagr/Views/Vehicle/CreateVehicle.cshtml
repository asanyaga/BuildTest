@using Distributr.HQ.Lib.Helper
@model Distributr.HQ.Lib.ViewModels.Agrimanagr.EquipmentViewModel.VehicleViewModel
@{
    ViewBag.Title = Html.GetText("hq.vehicle.form.title.add");
    if(ViewBag.Url!=null)
    {
        Layout = ViewBag.Url;
    }
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  
    <span class="bc-example">
        @Html.ActionLink("List Vehicles", "ListVehicles")
    </span> &gt; 
    @{
        if (ViewBag.Title == null)
        {
<text>Create Vehicle</text>
        }
        else
        {
           <text>Edit Vehicle</text> 
        }
    }
</h2>
@using Distributr.HQ.Lib.Helper
<div id="main-content-housing">

@if (ViewBag.msg2 != null)
{ 
    <div class="notice-notification">
@ViewBag.msg2
</div>
}


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.vehicle.form.details.add")</legend>
           
                <table class="detail-arrange">
                    <tr>
                        <td style="padding-top: 12px;"><strong>Name :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Name)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.Name)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Code :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Code)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.Code)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Registration Number :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.RegistrationNumber)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.RegistrationNumber)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Make :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Make)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.Make)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Model :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Model)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.Model)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>Description :</strong></td>
                        <td><span class="text-box-cshtml">@Html.EditorFor(model => model.Description)</span> 
                            <span class="inline-error">  @Html.ValidationMessageFor(model => model.Description)</span>
                        </td>
                    </tr>
               
                    <tr><td style="padding-top: 12px;"><strong>Hub :</strong></td>
                   
                        <td><span class="text-box-cshtml">
                                @Html.DropDownListFor(model => model.HubId, new SelectList(ViewBag.HubsList, "Key", "Value"), "----Select Hub----")
                            </span> 
                            <span class="inline-error">
                                @Html.ValidationMessageFor(model => model.HubId)
                            </span>             
                        </td>
                    </tr>
                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one"/>
                <input name="Create" type="reset" value="Clear" class="button-style-one"/>
            </fieldset>
        </div>
    }
    </div>

    
    

