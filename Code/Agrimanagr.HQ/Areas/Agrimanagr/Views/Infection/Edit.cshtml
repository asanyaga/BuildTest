@using Distributr.HQ.Lib.Helper
@model Agrimanagr.HQ.Areas.Agrimanagr.ViewModels.InfectionViewModel
@*@model Distributr.WSAPI.Lib.DTOModels.AgrimanagrDTO.FarmActivities.InfectionDTO*@

@{
    ViewBag.Title = "Edit";
}

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.infection.form.breadcrumb.view"), "Index")</span> &gt; 
    @Html.GetText("hq.infection.form.breadcrumb.edit")</h2>
<div>
    @if (ViewBag.msg != null)
    {
        <div class="notice-notification">
            @ViewBag.msg
        </div>
    }
</div>
<div id="main-content-housing">
    @using (Html.BeginForm())
    {
       @* @Html.ValidationSummary(true)*@
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.infection.form.details.edit")</legend>
                <table class="detail-arrange">
                    @Html.HiddenFor(model => model.MasterId)

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.infection.Name")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.infection.Code")*</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.infection.Description")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.infection.Infectiontype")*</strong></td>
                        <td>
                            
                            @Html.DropDownListFor(model => model.InfectionTypeId, new SelectList(ViewBag.InfectionTypesList , "Key", "Value"),"----Select Infection Type ----")
                            @Html.ValidationMessageFor(model => model.InfectionTypeId)
                        </td>
                    </tr>
                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" id="buttonId" onclick="javascript: onSubmitButtonClick(); return true;" type="submit" value="Save" class="button-style-one" />
                <input name="Cancel" type="reset" value="Cancel" class="button-style-one" id="cancel"/>
            </fieldset>
        </div>
    }
</div>
<script type="text/javascript">
   
        $('#cancel').click(function () {
           
            window.location = "Index";
        });
</script>
