@using Distributr.HQ.Lib.Helper
@model Agrimanagr.HQ.Areas.Agrimanagr.ViewModels.SeasonViewModel

@{
    ViewBag.Title = "Edit";
}

@*<link href="@Url.Content("~/Content/Agrimanager/styles/jquery.ui.timepicker.css")" rel="stylesheet"/>*@

<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.season.form.breadcrumb.view"), "Index")</span> &gt; 
    @Html.GetText("hq.season.form.breadcrumb.edit")</h2>

<div id="main-content-housing">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.season.form.details.edit")</legend>
                <table class="detail-arrange">
                    @Html.HiddenFor(model => model.MasterId)
                    @Html.HiddenFor(model => model.StatusId)
                    @Html.HiddenFor(model => model.DateCreated)
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.name ")*</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.code")</strong></td>
                        <td>
                           
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.startdate ")*</strong></td>
                        <td>
                            @Html.TextBox("StartDate", Model.StartDate.ToString("MM/dd/yyyy"), new {Class="datepicker"}),
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.enddate ")*</strong></td>
                        <td>
                            @Html.TextBox("EndDate",Model.EndDate.ToString("MM/dd/yyyy"),new{Class="datepicker"})
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.description")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.season.commodityproducer")*</strong></td>
                        <td>
                            @Html.DropDownListFor(model => model.CommodityProducerId, new SelectList(ViewBag.CommodityProducers , "Key", "Value"), "----Select Commodity Producer ----")
                            @Html.ValidationMessageFor(model=>model.CommodityProducerId)
                        </td>
                    </tr>

                    
                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" id="buttonId" onclick="javascript: onSubmitButtonClick(); return true;" type="submit" value="Save" class="button-style-one" />
                <input name="Cancel" type="reset" value="Cancel" class="button-style-one" id="cancel"/>
            </fieldset>
        </div>
    }
</div>

<script type="text/javascript">
    $(function() {
        $('.datepicker').datepicker({
            changeMonth:true,
            buttonImage:"/Content/images/cal.gif",
            showOn:"both",
            changeYear:true,
            yearRange:'1950:2100'
        });
    });

    $('#cancel').click(function () {
           
            window.location = "Index";
        });
</script>
