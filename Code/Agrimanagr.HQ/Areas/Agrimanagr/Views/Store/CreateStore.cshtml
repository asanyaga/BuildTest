@using Distributr.HQ.Lib.Helper
@model Distributr.HQ.Lib.ViewModels.Agrimanagr.CostCentreViewModel.StoreViewModel
@{
    ViewBag.Title = "CreateStore";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2 id="breadcrumb-holder">Global Settings &gt;<span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.store.form.breadcrumb.view"), "ListStores")</span> &gt;
    @Html.GetText("hq.store.form.breadcrumb.add")</h2>
<div id="main-content-housing">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.store.form.details.add")</legend>
                <table class="detail-arrange">
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.store.Name")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.store.Code")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.store.VatRegistrationNo")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.VatRegistrationNo)
                            @Html.ValidationMessageFor(model => model.VatRegistrationNo)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.store.Longitude")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Longitude)
                            @Html.ValidationMessageFor(model => model.Longitude)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.store.Latitude")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Latitude)
                            @Html.ValidationMessageFor(model => model.Latitude)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>Parent Hub</strong></td>
                        <td>
                            @Html.DropDownListFor(model => model.ParentCostCentreId, new SelectList(ViewBag.ParentCostCentreList, "Key", "Value"), "--- Select Parent Hub ---")
                            @Html.ValidationMessageFor(model => model.ParentCostCentreId)
                        </td>
                    </tr>

@*                    <tr>
                        <td style="padding-top: 12px;"><strong>Cost-Centre Type</strong></td>
                        <td>
                            @Html.DropDownListFor(model => model.CostCentreType, new SelectList(ViewBag.CostCentreTypeList, "Key", "Value"), "--- Select Cost-Center Type ---")
                            @Html.ValidationMessageFor(model => model.CostCentreType)
                        </td>
                    </tr>*@
                </table>
            </fieldset>
            <fieldset class="actions">
                <legend>Actions</legend>
                <input name="Create" type="submit" value="Save" class="button-style-one" />
                <input name="Create" type="reset" value="Clear" class="button-style-one" />


            </fieldset>
        </div>
       
    
    }
</div>

