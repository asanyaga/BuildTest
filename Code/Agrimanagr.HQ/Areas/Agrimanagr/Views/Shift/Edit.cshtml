

@using Distributr.HQ.Lib.Helper
@model Distributr.Core.MasterDataDTO.DTOModels.AgrimanagrDTO.FarmActivities.ShiftDTO

@{
    ViewBag.Title = "Edit";
}
<link href="@Url.Content("~/Content/Agrimanager/styles/jquery.ui.timepicker.css")" rel="stylesheet"/>
<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.shift.form.breadcrumb.view"), "Index")</span> &gt; 
    @Html.GetText("hq.shift.form.breadcrumb.edit")</h2>

<div id="main-content-housing">
    @using (Html.BeginForm())
    {
         @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.shift.form.details.edit")</legend>
                <table class="detail-arrange">
                    @Html.HiddenFor(model => model.MasterId)
                      @Html.HiddenFor(model => model.StatusId)
                     @Html.HiddenFor(model => model.DateCreated)
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.shift.Code")*</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.shift.Name ")*</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.shift.starttime ")*</strong></td>
                        <td>
                              @Html.TextBox("StartTimeString", Model.StartTime.ToString("HH:mm"), new { @class = "timepicker" })
                             @Html.ValidationMessageFor(model => model.StartTimeString)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.shift.endtime ")*</strong></td>
                        <td>
                           @Html.TextBox("EndTimeString", Model.EndTime.ToString("HH:mm"), new { @class = "timepicker" })
                            @Html.ValidationMessageFor(model => model.EndTimeString)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.shift.Description")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    
                </table>
            </fieldset>
             <fieldset class="actions">
                <legend>Actions</legend>
                 <input name="Create" type="submit" value="Save" class="button-style-one" />
                 <input name="Cancel" type="reset" value="Cancel" class="button-style-one" id="cancel"/>
            </fieldset>
            </div>
    }
    </div>


<script type="text/javascript">

    $(function () {
        $('.timepicker').timepicker({
            showAnim: 'blind',
            showPeriod: true,
            showLeadingZero: true
        });
    });
    
    $('#cancel').click(function () {
           
            window.location = "Index";
        });
</script>

<script src="@Url.Content("~/Content/Agrimanager/js/jquery.ui.timepicker.js")" type="text/javascript"></script>
