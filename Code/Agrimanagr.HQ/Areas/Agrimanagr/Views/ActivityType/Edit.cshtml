
@using Distributr.HQ.Lib.Helper
@model Distributr.Core.MasterDataDTO.DTOModels.AgrimanagrDTO.FarmActivities.ActivityTypeDTO

@{
    ViewBag.Title = "Edit";
}
<h2 id="breadcrumb-holder">GLOBAL SETTINGS &gt;  <span class="bc-example">
    @Html.ActionLink(Html.GetText("hq.activitytype.form.breadcrumb.view"), "Index")</span> &gt; 
    @Html.GetText("hq.activitytype.form.breadcrumb.edit")</h2>

<div id="main-content-housing">
    @using (Html.BeginForm())
    {
         @Html.ValidationSummary(true)
        <div id="primary-controls">
            <fieldset>
                <legend>@Html.GetText("hq.activitytype.form.details.edit")</legend>
                <table class="detail-arrange">
                    @Html.HiddenFor(model => model.MasterId)
                      @Html.HiddenFor(model => model.StatusId)
                     @Html.HiddenFor(model => model.DateCreated)
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.Code") *</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Code)
                            @Html.ValidationMessageFor(model => model.Code)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.Name") *</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.IsInfectionsRequired")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.IsInfectionsRequired)
                            @Html.ValidationMessageFor(model => model.IsInfectionsRequired)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.IsInputRequired")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.IsInputRequired)
                            @Html.ValidationMessageFor(model => model.IsInputRequired)
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.IsServicesRequired")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.IsServicesRequired)
                            @Html.ValidationMessageFor(model => model.IsServicesRequired)
                        </td>
                    </tr>
                     <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.IsProduceRequired")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.IsProduceRequired)
                            @Html.ValidationMessageFor(model => model.IsProduceRequired)
                        </td>
                    </tr>

                    <tr>
                        <td style="padding-top: 12px;"><strong>@Html.GetText("hq.activitytype.Description")</strong></td>
                        <td>
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </td>
                    </tr>
                    
                </table>
            </fieldset>
             <fieldset class="actions">
                <legend>Actions</legend>
                 <input name="Create" type="submit" value="Save" class="button-style-one" />
                 <input name="Cancel" type="reset" value="Cancel" class="button-style-one" id="cancel"/>
            </fieldset>
            </div>
    }
    </div>

<script type="text/javascript">
   
        $('#cancel').click(function () {
           
            window.location = "Index";
        });
</script>


















